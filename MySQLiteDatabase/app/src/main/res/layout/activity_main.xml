<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID:"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/idId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="Enter Id (update and delete)."
            android:textSize="20dp"
            android:textColor="#FF5722"
            android:textStyle="italic"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name:"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/nameId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="Enter your name (save)."
            android:textSize="20dp"
            android:textColor="#FF5722"
            android:textStyle="italic"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Age:"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ageId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="Enter your age (save)."
            android:textSize="20dp"
            android:textColor="#FF5722"
            android:textStyle="italic"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gender:"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/genderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="Enter your gender (save)."
            android:textSize="20dp"
            android:textColor="#FF5722"
            android:textStyle="italic"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/saveId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:backgroundTint="#334564"
            android:text="Save"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/clearId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:backgroundTint="#C77800"
            android:text="Clear"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/readId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:backgroundTint="#396934"
            android:text="Show Data"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/updateId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:backgroundTint="#2196F3"
            android:text="Update Data"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/dataListId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:backgroundTint="#2F0F64"
            android:text="Data List"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/deleteId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:backgroundTint="#AA1E1E"
            android:text="Delete Data"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>