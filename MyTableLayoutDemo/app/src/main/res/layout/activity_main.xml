<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#050B22">

    <TextView
        android:text="Student Details"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:textAlignment="center"
        android:layout_margin="15dp"/>

    <TableRow
        android:id="@+id/row1Id"
        android:layout_margin="10dp"
        android:background="#DDAE26">

        <TextView
            android:text="First Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingRight="35dp"/>

        <TextView
            android:text="Last Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingRight="15dp"/>

        <TextView
            android:text="Age"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingRight="15dp"/>

        <TextView
            android:text="GPA"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>


    </TableRow>

    <TableRow
        android:id="@+id/row2Id"
        android:layout_margin="10dp">

        <TextView
            android:text="Abir Hosen"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:text="Ashik"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:text="26"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:text="2.90"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </TableRow>


    <TableRow
        android:id="@+id/row3Id"
        android:layout_margin="10dp">

        <TextView
            android:text="Nigar Sultana"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:text="Mumu"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:text="24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:text="3.00"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </TableRow>

    <TableRow
        android:id="@+id/row4Id"
        android:layout_marginTop="30dp">

        <Button
            android:layout_column="0"
            android:text="Submit"
            android:textColor="#00FFE6"
            android:textSize="18dp"
            android:backgroundTint="#0D304D"
            android:layout_span="1"/>

        <Button
            android:layout_column="3"
            android:text="Clear"
            android:textColor="#FF3C00"
            android:textSize="18dp"
            android:backgroundTint="#0D304D"/>

    </TableRow>

</TableLayout>